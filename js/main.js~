function _(x){
return document.getElementById(x);
}
/*---------------------------------
PAGE = LOGIN
----------------------------------*/

function registerStudent(){
    var val = _('email').value;
    
  }
  
function restrict(elem){
    var tf = _(elem);
    var rx = new RegExp;
    
    
        if(elem == "email"){
            rx = /[" "]/gi;
            tf.value = tf.value.replace(rx, "");
 
      } else if(elem == "forename"){
            rx = /[^a-z-]/gi;
            rx = capitalise('rx');
            tf.value = capitalise(tf.value.replace(rx, ""));
            tf.value = tf.value.replace(/[0-9]/gi, '')
            
      } else if(elem == "surname"){
            rx = /[^a-z-]/gi;
            tf.value = capitalise(tf.value.replace(rx, ""));
            tf.value = tf.value.replace(/[0-9]/gi, '')
      }
}

function capitalise(x)
{
    return x.charAt(0).toUpperCase() + x.slice(1);
}

    


